@using System.Security.Claims
@{
    string? userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OzSapkaTShirt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OzSapkaTShirt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OzSapkaTShirt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (userId == null)
                        {
                            <li class="nav-item" style="position:absolute;right:0">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item" style="position:absolute;right:50px">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Create">Kayıt</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="position:absolute;right:100px">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Details">
                                    <span>Sepetim</span>
                                    <span id="basketCount">@Context.Session.GetInt32("basketCount").ToString()</span>
                                </a>
                            </li>
                            <li class="nav-item" style="position:absolute;right:180px">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index" asp-route-id="@userId">Son Siparişlerim</a>
                            </li>
                            <li class="nav-item" style="position:absolute;right:50px">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Edit" asp-route-id="@userId">Profil</a>
                            </li>
                            <li class="nav-item" style="position:absolute;right:0">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 text-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OzSapkaTShirt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
